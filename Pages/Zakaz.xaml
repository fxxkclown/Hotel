<Page x:Class="Hotel.Pages.Zakaz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Zakaz">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <WrapPanel>
                <TextBlock Text="ФИО КЛИЕНТА" Width="100"/>
                <TextBox Width="100"/>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="Услуга" Width="100"/>
                <TextBox Width="100"/>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="Номер комнаты" Width="100"/>
                <TextBox Width="100"/>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="Цена" Width="100"/>
                <TextBox Width="100"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center">
                <Button Content="Сформировать заказ" Click="Button_Click"/>
            </WrapPanel>
        </StackPanel>
        
    </Grid>
</Page>
