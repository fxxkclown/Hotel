<Page x:Class="Hotel.Pages.Avtoriz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Avtoriz">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
            <WrapPanel>
                <TextBlock Text="Логин" Width="70"/>
                <TextBox x:Name="Login" Width="150"/>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="Пароль" Width="70"/>
                <TextBox x:Name="Password" Width="150"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center">
                <Button Content="Авторизация" x:Name="Avtorizatsia" FontSize="20" Click="Avtorizatsia_Click"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>
